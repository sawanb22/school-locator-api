{
  "info": {
    "_postman_id": "a7f7ab2a-61e4-4a89-9e26-8e83bb7b7f10",
    "name": "School Distance API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for School Distance API: addSchool and listSchools"
  },
  "item": [
    {
      "name": "Add School",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/addSchool",
          "host": ["{{baseUrl}}"],
          "path": ["addSchool"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"ABC Elementary School\",\n  \"address\": \"123 Main Street, City, State\",\n  \"latitude\": 40.7128,\n  \"longitude\": -74.0060\n}"
        },
        "description": "Adds a new school with validation."
      }
    },
    {
      "name": "List Schools (by distance)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/listSchools?u_latitude=40.7128&u_longitude=-74.0060",
          "host": ["{{baseUrl}}"],
          "path": ["listSchools"],
          "query": [
            { "key": "u_latitude", "value": "40.7128" },
            { "key": "u_longitude", "value": "-74.0060" }
          ]
        },
        "description": "Returns all schools sorted by distance (km) from the provided user coordinates."
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" }
  ]
}
